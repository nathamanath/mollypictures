upstream app {
  server 0.0.0.0:8080;
}

server {

  access_log /var/log/mollypictures/nginx_access.log;
  error_log /var/log/mollypictures/nginx_error.log;

  listen 9000;

  location / {
    gzip_static on;
    gzip_vary on;
    gzip_disable msie6;
    gzip_comp_level 3;
    gzip_types application/x-javascript text/css text/html image/x-icon image/png image/jpeg image/gif;

    add_header Cache-Control public;

    proxy_pass http://app;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

}

proxy_cache_path /tmp/nginx levels=1:2 keys_zone=my_zone:10m inactive=15m;
proxy_cache_key "$scheme$request_method$host$request_uri";

server {

  access_log /var/log/mollypictures/nginx_cache_access.log;
  error_log /var/log/mollypictures/nginx_cache_error.log;

  listen 80;

  location / {
    gzip_static on;
    gzip_vary on;
    gzip_disable msie6;
    gzip_comp_level 3;
    gzip_types application/x-javascript text/css text/html image/x-icon image/png image/jpeg image/gif;

    expires 15m;

    add_header Cache-Control public;

    proxy_cache my_zone;
    add_header X-Proxy-Cache $upstream_cache_status;

    include proxy_params;
    proxy_pass http://0.0.0.0:9000;
  }
}
